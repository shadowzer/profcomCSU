<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.csu.profcom.FragmentQuestions">

    <CheckBox
        android:text="Анонимный вопрос"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:id="@+id/checkBox"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:text="Задать вопрос"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/ask_button"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Перейти к FAQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FAQ_button"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/ask_button"
        android:layout_alignStart="@+id/ask_button"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        tools:text="\tПрежде чем задать вопрос, проверьте страницу с часто задаваемыми вопросами. Возможно на ваш вопрос уже есть ответ!"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:text="\tПрежде чем задать вопрос, проверьте страницу с часто задаваемыми вопросами. Возможно на ваш вопрос уже есть ответ!" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textLongMessage"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="17dp"
        android:hint="Ваш вопрос"
        android:layout_below="@+id/FAQ_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
