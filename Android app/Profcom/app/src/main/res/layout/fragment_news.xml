<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.csu.profcom.FragmentNews"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <!--<ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/newsList">



                </ListView>-->

                <TextView
                    android:text="Профком ЧелГУ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/authorTextView"
                    android:layout_marginTop="11dp" />

                <TextView
                    android:text='Уважаемые студенты! \nМногие из вас слышали понятие "Новогодняя стипендия" и с нетерпением ждут ее под конец 2016! \n\nСпешим раскрыть этот миф и сообщить, что официального понятия "новогодняя стипендия" в нашем Законодательстве НЕТ! \n\nТак что же за суммы приходили вам на карточку под Новый Год? Рады объяснить! Существует стипендиальный фонд учебного заведения, и если к концу года есть неизрасходованные средства - они выплачиваются студентам в виде денежного "вознаграждения", что, просим заметить, Официально Запрещено  \n\n#шпаргалкастуденту #стипендияЧеЛГУ #ПрофкомЧелГУ #ЧелГУ #вступай_в_профсоюз'
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contentTextView"
                    android:layout_marginTop="20dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:srcCompat="@drawable/img_example"
                    android:layout_marginTop="15dp"
                    android:id="@+id/newsImageView"
                    android:scaleType="fitCenter"
                    android:layout_weight="0.74" />

            </LinearLayout>

    </ScrollView>

</LinearLayout>
